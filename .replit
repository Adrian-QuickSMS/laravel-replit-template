modules = ["php-8.3", "nodejs-20", "postgresql-16"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip"]

# ---- Environment Variables ----
[userenv]

[userenv.shared]
DB_CONNECTION = "pgsql"
APP_URL = "http://0.0.0.0:5000"
DB_DATABASE = "heliumdb"
DB_HOST = "helium"
DB_PORT = "5432"
DB_USERNAME = "postgres"
DB_PASSWORD = "password"
APP_NAME = "QuickSMS"

[userenv.development]
ADMIN_DEV_AUTOLOGIN = "true"
APP_DEBUG = "true"
APP_ENV = "local"

# ---- On Boot: Auto-setup when imported from Git ----
onBoot = "bash setup.sh"

# ---- Workflows ----
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup.sh"

[[workflows.workflow]]
name = "Migrate"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan migrate --force"

[[workflows.workflow]]
name = "Seed Database"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan db:seed --force"

[[workflows.workflow]]
name = "Fresh Migrate & Seed"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan migrate:fresh --seed --force"

[[workflows.workflow]]
name = "Clear Cache"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan config:clear && php artisan cache:clear && php artisan view:clear && php artisan route:clear"

# ---- Port Configuration ----
[[ports]]
localPort = 5000
externalPort = 80

# ---- Deployment ----
[deployment]
deploymentTarget = "autoscale"
build = ["bash", "setup.sh"]
run = ["php", "artisan", "serve", "--host=0.0.0.0", "--port=5000"]
